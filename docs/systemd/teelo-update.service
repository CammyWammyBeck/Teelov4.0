[Unit]
Description=Teelo update current events
After=network.target

[Service]
Type=oneshot
WorkingDirectory=/opt/teelo
EnvironmentFile=/opt/teelo/.env
ExecStart=/opt/teelo/venv/bin/python /opt/teelo/scripts/run_hourly_update.py --workers 3
User=teelo
Group=teelo

[Install]
WantedBy=multi-user.target
