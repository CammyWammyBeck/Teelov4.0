# Teelo Environment Configuration
# Copy this to .env and fill in your values

# Database connection (required)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://teelo:your_password_here@localhost:5432/teelo

# Heroku replica (optional - for backup/API hosting)
# HEROKU_DATABASE_URL=postgresql://...

# Discord webhook for alerts (optional)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Scraping settings (optional - defaults shown)
# SCRAPE_HEADLESS=true
# SCRAPE_TIMEOUT=30000
# SCRAPE_DELAY_MIN=1.0
# SCRAPE_DELAY_MAX=3.0
# SCRAPE_VIRTUAL_DISPLAY=false   # Set true on headless servers (uses Xvfb)
# SCRAPE_VNC_PORT=5900           # VNC port for virtual display
# SCRAPE_NOVNC_PORT=6080         # noVNC web port (view at http://host:6080/vnc.html)

# Logging (optional)
# LOG_LEVEL=INFO
